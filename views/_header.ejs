<link rel="stylesheet" href="/css/header.css">
<header>
    <nav>
        <div class="left">
            <a href="/">
                <img src="https://cdn-icons-png.flaticon.com/128/942/942767.png" alt="">
                <span>careerCamp</span>
            </a>
        </div>
        <div class="right">
            <div class="right-children">
                <a href="/students">
                    <span>students</span>
                </a>
            </div>
            <div class="right-children">
                <a href="/user/sign-in">
                    <span>
                        <% if (locals.user) { %>
                            <%= user.name %>
                        <% } else { %>
                            login
                        <%}%>
                    </span>
                </a>
            </div>
            <div class="right-children">
                <% if (locals.user) { %>
                    <a href="/user/sign-out">
                        <span>sign out</span>
                    </a>
                <% }else{ %>
                    <a href="/user/sign-up">
                        <span>sign up</span>
                    </a>
                <% } %>
            </div>
        </div>
    </nav>
</header>